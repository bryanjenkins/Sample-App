<% provide(:title, current_user.name) %>
<div class="row">
  <div class="span12">
    <% if current_user.patients.any? %>
      <h3 class="patients_header">Patients (<%= current_user.patients.count %>)</h3>
      <%= link_to "Create New Patient", new_patient_path, class: "create_patient" %>
      <ol class="forms">
        <%= render @patients %>
      </ol>
    <% end %>
  </div>
</div>